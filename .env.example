# Environment template for Market Watcher (local/dev)
# Copy to .env and fill in real values. Never commit secrets.

# App
APP_ENV=local
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000

# Kafka / Redpanda
KAFKA_BOOTSTRAP_SERVERS=redpanda:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_TOPIC_RAW=market-data-raw
KAFKA_TOPIC_ALERTS=alerts
KAFKA_TOPIC_METRICS=metrics-calculated

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# PostgreSQL / TimescaleDB
DB_HOST=postgres
DB_PORT=5432
DB_NAME=market_watcher
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=prefer

# Firebase Auth (Google OAuth)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@example.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# API
API_PORT=8000
API_HOST=0.0.0.0
RATE_LIMIT_PER_MINUTE=100

# Frontend
FRONTEND_PORT=3000
PUBLIC_API_BASE_URL=http://localhost:8000

# Ingestion Schedule (UTC)
INGESTION_START_UTC=08:00
INGESTION_STOP_UTC=09:00

# Alert Thresholds (defaults; overridable via config/alert_thresholds.yml)
ALERT_VOLATILITY_THRESHOLD=5.0
ALERT_DRAWDOWN_THRESHOLD=3.0
ALERT_UNREALIZED_PNL_THRESHOLD=-5.0

# Security
JWT_AUDIENCE=market-watcher
JWT_ISSUER=market-watcher

# Optional Cloud (Upstash/Render/Vercel) - leave empty for local
UPSTASH_KAFKA_REST_URL=
UPSTASH_KAFKA_REST_USERNAME=
UPSTASH_KAFKA_REST_PASSWORD=
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=
RENDER_DEPLOY_HOOK_URL=
VERCEL_DEPLOY_HOOK_URL=
